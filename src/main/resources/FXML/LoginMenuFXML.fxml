<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="680.0" prefWidth="900.0" styleClass="Login-background" stylesheets="@../CSS/Style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.ViewController.LoginViewController">
   <children>
      <VBox alignment="CENTER" layoutX="314.0" layoutY="202.0" prefHeight="265.0" prefWidth="272.0" styleClass="Box">
         <children>
            <Label text="Sign In" translateY="-15.0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Label>
            <TextField fx:id="username" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" prefWidth="100.0" promptText="Username" translateY="-10.0" />
            <TextField fx:id="password" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="Password" />
            <Button mnemonicParsing="false" onMouseClicked="#signInClicked" prefHeight="26.0" prefWidth="86.0" text="Sign In" translateY="12.0" styleClass="button-regular"/>
            <Button mnemonicParsing="false" onMouseClicked="#goToSignUpMenu" prefHeight="30.0" prefWidth="298.0" styleClass="button-no-background"  text="Don't have an account? Please sign up" textAlignment="CENTER" translateY="25.0" />
            <Button mnemonicParsing="false" onMouseClicked="#goToForgetPassword" styleClass="button-no-background"  text="Forgot password" translateY="17.0" />
         </children>
      </VBox>
      <ImageView fitHeight="178.0" fitWidth="545.0" layoutX="215.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Icnos/Logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="680.0" prefWidth="900.0" styleClass="Login-background" stylesheets="@../CSS/Style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.ViewController.SignUpViewController">
   <children>
      <VBox alignment="CENTER" layoutX="306.0" layoutY="126.0" prefHeight="488.0" prefWidth="268.0" styleClass="Box">
         <children>
            <Label text="Username" translateX="-50.0" translateY="-10.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="username" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="[a-zA-Z0-9-]" translateY="-10.0" />
            <Label fx:id="usernameError" prefHeight="18.0" prefWidth="170.0" styleClass="error-label"  translateX="5.0" translateY="-10.0" />
            <Label text="Email" translateX="-65.0" translateY="-5.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="email" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="***@**.**" translateY="-5.0" />
            <Label fx:id="emailError" prefHeight="18.0" prefWidth="170.0" styleClass="error-label" translateX="5.0" translateY="-5.0" />
            <Label text="Nickname" translateX="-50.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="nickname" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="anything you want:)" />
            <Label text="Password" translateX="-50.0" translateY="20.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <PasswordField fx:id="password" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="[a-zA-Z0-9!@#$%^]" translateY="20.0" />
            <Label fx:id="passError" maxWidth="160.0" prefWidth="170.0" styleClass="error-label" translateY="20.0" />
            <PasswordField fx:id="passwordConfirmation" alignment="CENTER" maxWidth="170.0" prefHeight="30.0" promptText="confirmation" translateY="20.0" />
            <Label fx:id="confirmationError" maxWidth="170.0" prefWidth="170.0" styleClass="error-label" translateX="5.0" translateY="20.0" />
            <Button fx:id="randomPass" mnemonicParsing="false" onMouseClicked="#getRandomPasswordClicked" styleClass="button-no-background" stylesheets="@../CSS/Style.css" text="Get a random password" translateY="20.0" underline="true" />
            <Button fx:id="signUp" mnemonicParsing="false" onMouseClicked="#ContinueClicked" styleClass="button-regular" stylesheets="@../CSS/Style.css" text="Continue" translateY="30.0" />
            <Label translateY="20.0" />
         </children>
      </VBox>
      <Label layoutX="357.0" layoutY="49.0" text="Sign Up" textFill="#c2e7e3">
         <font>
            <Font name="System Bold" size="45.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
